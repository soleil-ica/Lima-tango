			</dependency>
			<dependency>
				<groupId>fr.soleil.lib.Lima.Camera</groupId>
				<artifactId>LimaMarccd-${aol}-shared-${mode}</artifactId>
				<version>1.3.0</version>
			</dependency>
			<dependency>
				 <groupId>fr.soleil.lib.Lima.Camera</groupId>
				 <artifactId>LimaPilatus-${aol}-shared-${mode}</artifactId>
